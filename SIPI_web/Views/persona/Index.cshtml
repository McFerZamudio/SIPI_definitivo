@model IEnumerable<SIPI_web.Models.tbl_persona>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.persona_nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.persona_identificacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.persona_nombre) <br/>
                @Html.DisplayFor(modelItem => item.persona_apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.persona_identificacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_persona">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_persona">Detalles</a> |
                <a asp-action="asignaRoles" asp-route-id="@item.id_persona">Asigna Roles</a> |
                <a asp-action="Delete" asp-route-id="@item.id_persona">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<SIPI_web.Models.tbl_estado>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.estado_nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.id_paisNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.estado_nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_paisNavigation.pais_nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_estado">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_estado">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_estado">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

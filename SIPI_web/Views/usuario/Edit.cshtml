@model SIPI_web.Models.tbl_usuario

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutPublico.cshtml";
}

<h4><b style="color:blue">Modificar Usuario en el Portal:</b> @ViewBag.userName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_usuario" />
            <div class="form-group">
                <label asp-for="usuario_fechaNacimiento" class="control-label">Fecha Nacimiento</label>
                <input asp-for="usuario_fechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="usuario_fechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usuario_ciudadNacimiento" class="control-label">Ciudad Nacimiento</label>
                <input asp-for="usuario_ciudadNacimientoNavigation.ciudad_nombre" id="nacimiento" asp-value class="form-control" readonly />
                <input type="hidden" asp-for="usuario_ciudadNacimiento" id="usuario_ciudadNacimiento" name="usuario_ciudadNacimiento" required />
                <button onclick="seleccionarCiudad('nacimiento', 'usuario_ciudadNacimiento');return false; ">Seleccione Ciudad Nacimiento</button>
                <span asp-validation-for="usuario_ciudadNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usuario_ciudadUbicacion" class="control-label">Ciudad Ubicacion</label>
                <input asp-for="usuario_ciudadUbicacionNavigation.ciudad_nombre" id="ubicacion" asp-value class="form-control" readonly />
                <input type="hidden" asp-for="usuario_ciudadUbicacion" id="usuario_ciudadUbicacion" name="usuario_ciudadUbicacion" required />
                <button onclick="seleccionarCiudad('ubicacion', 'usuario_ciudadUbicacion');return false; ">Seleccione Ciudad Ubicacion</button>
                <span asp-validation-for="usuario_ciudadNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="usuario_fechaCreacion" class="control-label">Fecha Creacion</label>
                <input asp-for="usuario_fechaCreacion" type="date" class="form-control" readonly />
                <span asp-validation-for="usuario_fechaCreacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    function seleccionarCiudad(ciudad, idCiudad) {
        window.open("/seleccionCiudad.html?ciudad=" + ciudad + "&idCiudad=" + idCiudad, "_blank", "toolbar=yes,scrollbars=yes,resizable=yes,top=500,left=500,width=400,height=400");
    }
</script>
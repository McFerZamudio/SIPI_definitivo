    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<hr />
<div class="row">
    <div>
        <partial name="../administrador/administradorNav" />
    </div>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_teg" />
            <div class="form-group">
                <label asp-for="teg_codigoInterno" class="control-label">Codigo Interno</label>
                <input asp-for="teg_codigoInterno" class="form-control" />
                <span asp-validation-for="teg_codigoInterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_codigoTeg" class="control-label">Codigo Teg</label>
                <input asp-for="teg_codigoTeg" class="form-control" />
                <span asp-validation-for="teg_codigoTeg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_consultorMetodologia" class="control-label">Consultor Metodologico</label>
                <select asp-for="id_consultorMetodologia" class="form-control" asp-items="ViewBag.id_consultorMetodologia"></select>
                <span asp-validation-for="id_consultorMetodologia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_consultorAcademico" class="control-label">Consultor Academico</label>
                <select asp-for="id_consultorAcademico" class="form-control" asp-items="ViewBag.id_consultorAcademico"></select>
                <span asp-validation-for="id_consultorAcademico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_porcentaje" class="control-label">Porcentaje</label>
                <input asp-for="teg_porcentaje" class="form-control" />
                <span asp-validation-for="teg_porcentaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_puntuacion" class="control-label">Puntuacion</label>
                <input asp-for="teg_puntuacion" class="form-control" />
                <span asp-validation-for="teg_puntuacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_fechaDefensa" class="control-label">Fecha Defensa</label>
                <input asp-for="teg_fechaDefensa" class="form-control" />
                <span asp-validation-for="teg_fechaDefensa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_tegEstatus" class="control-label">Estatus TEG</label>
                <select asp-for="id_tegEstatus" class="form-control" asp-items="ViewBag.id_tegEstatus"></select>
                <span asp-validation-for="id_tegEstatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_fechaRecepcionDocumento" class="control-label">Recepcion Documento</label>
                <input asp-for="teg_fechaRecepcionDocumento" class="form-control" />
                <span asp-validation-for="teg_fechaRecepcionDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teg_observacionRecepcionDocumento" class="control-label">Observacion Recepcion</label>
                <textarea asp-for="teg_observacionRecepcionDocumento" rows="10" class="form-control"></textarea>
                <span asp-validation-for="teg_observacionRecepcionDocumento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Informacion Proyectos" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
